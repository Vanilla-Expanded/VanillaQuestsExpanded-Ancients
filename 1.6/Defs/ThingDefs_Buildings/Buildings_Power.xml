<?xml version="1.0" encoding="UTF-8"?>
<Defs>
	<ThingDef ParentName="VQEA_AncientsBuildingBase">
		<defName>VQEA_AncientChemfuelGenerator</defName>
		<label>ancient chemfuel generator</label>
		<description>A bulky chemfuel-powered generator from a bygone era. It produces large amounts of power but needs to be manually “kicked” back into operation when it stalls.</description>
		<size>(3,3)</size>
		<passability>PassThroughOnly</passability>
		<drawerType>MapMeshAndRealTime</drawerType>
		<fillPercent>0.75</fillPercent>
		<pathCost>50</pathCost>
		<rotatable>false</rotatable>
		<tickerType>Normal</tickerType>
		<statBases>
			<MaxHitPoints>400</MaxHitPoints>
			<Flammability>1</Flammability>
			<Beauty>-30</Beauty>
			<Mass>120</Mass>
		</statBases>
		<costList>
			<Steel>60</Steel>
			<ComponentIndustrial>3</ComponentIndustrial>
		</costList>
		<graphicData>
			<texPath>Things/Building/Power/AncientChemfuelGenerator</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(3,3)</drawSize>
		</graphicData>
		<building>
			<paintable>false</paintable>
			<claimable>true</claimable>
			<neverBuildable>true</neverBuildable>
		</building>
		<minifiedDef>MinifiedThing</minifiedDef>
		<thingCategories>
			<li>BuildingsPower</li>
		</thingCategories>
		<comps>
			<li Class="CompProperties_Flickable"/>
			<li Class="CompProperties_Refuelable">
				<fuelConsumptionRate>9.8</fuelConsumptionRate>
				<fuelCapacity>70.0</fuelCapacity>
				<fuelFilter>
					<thingDefs>
						<li>Chemfuel</li>
					</thingDefs>
				</fuelFilter>
				<showAllowAutoRefuelToggle>true</showAllowAutoRefuelToggle>
				<canEjectFuel>true</canEjectFuel>
			</li>
			<li Class="CompProperties_Glower">
				<glowRadius>6</glowRadius>
				<glowColor>(80,112,180,0)</glowColor>
			</li>
			<li Class="CompProperties_HeatPusher">
				<compClass>CompHeatPusherPowered</compClass>
				<heatPerSecond>6</heatPerSecond>
			</li>
			<li Class="CompProperties_Explosive">
				<explosiveRadius>3.65</explosiveRadius>
				<explosiveDamageType>Flame</explosiveDamageType>
				<damageAmountBase>10</damageAmountBase>
				<chanceNeverExplodeFromDamage>0.3</chanceNeverExplodeFromDamage>
				<startWickHitPointsPercent>0.35</startWickHitPointsPercent>
				<wickTicks>70~150</wickTicks>
				<preExplosionSpawnThingDef>Filth_Fuel</preExplosionSpawnThingDef>
				<preExplosionSpawnChance>1</preExplosionSpawnChance>
			</li>
			<li Class="VanillaQuestsExpandedAncients.CompProperties_KickablePower">
				<compClass>VanillaQuestsExpandedAncients.CompKickablePower</compClass>
				<timeInterval>60000~900000</timeInterval>
				<extraJuice>1~3000</extraJuice>
				<basePowerConsumption>-2000</basePowerConsumption>
				<transmitsPower>true</transmitsPower>
				<soundAmbientProducingPower>ChemfuelFiredGenerator_Ambience</soundAmbientProducingPower>
			</li>
			<li Class="CompProperties_Interactable">
				<compClass>VanillaQuestsExpandedAncients.CompInteractablePowerPlant</compClass>
				<ticksToActivate>10</ticksToActivate>
				<activeTicks>1</activeTicks>
				<guiLabelString>Choose who should do this</guiLabelString>
				<jobString>Kick generator</jobString>
				<activateLabelString>Kick generator</activateLabelString>
				<activateDescString>Kick the generator to make it work. Kicking it randomizes the amount of power it will produce. After some time, it will need to be kicked again.</activateDescString>
				<activateTexPath>UI/Gizmo/KickGizmo</activateTexPath>
				<activatingStringPending>Kicking generator</activatingStringPending>
				<activatingString>Kicking generator: {1}s</activatingString>
				<targetingParameters>
					<canTargetBuildings>false</canTargetBuildings>
					<canTargetAnimals>false</canTargetAnimals>
					<canTargetMechs>false</canTargetMechs>
					<onlyTargetControlledPawns>true</onlyTargetControlledPawns>
				</targetingParameters>
			</li>
		</comps>
	</ThingDef>
	<ThingDef ParentName="BuildingBase">
