			<li Class="CompProperties_Forbiddable"/>
			<li>
				<compClass>CompColorable</compClass>
			</li>
		</comps>
	</ThingDef>
	<ThingDef ParentName="VQEA_ApparelBase">
		<defName>VQEA_Apparel_PatientGown</defName>
		<label>patient gown</label>
		<description>Old and rugged patient gown. Provides no protection or insulation, but makes the medical procedures on a person wearing one just a little bit easier.</description>
		<graphicData>
			<texPath>Things/Apparel/PatientGown/PatientGown</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>0.90</drawSize>
		</graphicData>
		<thingCategories>
			<li>ApparelMisc</li>
		</thingCategories>
		<statBases>
			<Mass>0.25</Mass>
			<ArmorRating_Sharp>0.12</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.5</ArmorRating_Blunt>
			<ArmorRating_Heat>0.18</ArmorRating_Heat>
			<Insulation_Cold>4</Insulation_Cold>
			<Insulation_Heat>1</Insulation_Heat>
			<EquipDelay>3</EquipDelay>
		</statBases>
		<apparel>
			<bodyPartGroups>
				<li>Torso</li>	
				<li>Shoulders</li>		
				<li>Legs</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Apparel/PatientGown/PatientGown</wornGraphicPath>
			<canBeGeneratedToSatisfyWarmth>false</canBeGeneratedToSatisfyWarmth>
			<canBeGeneratedToSatisfyToxicEnvironmentResistance>false</canBeGeneratedToSatisfyToxicEnvironmentResistance>
			<layers>
				<li>OnSkin</li>
			</layers>
			<developmentalStageFilter>Adult</developmentalStageFilter>
			<countsAsClothingForNudity>true</countsAsClothingForNudity>
			<canBeDesiredForIdeo>false</canBeDesiredForIdeo>
		</apparel>
		
		<generateAllowChance>0</generateAllowChance>
	</ThingDef>
	
</Defs>
